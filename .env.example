# Cloudflare R2 Configuration
# Copy this file to .env and fill in your R2 credentials

# Your Cloudflare Account ID
EXPO_PUBLIC_R2_ACCOUNT_ID=your_account_id_here

# R2 API Token credentials (create at dash.cloudflare.com -> R2 -> Manage R2 API tokens)
EXPO_PUBLIC_R2_ACCESS_KEY_ID=your_access_key_id_here
EXPO_PUBLIC_R2_SECRET_ACCESS_KEY=your_secret_access_key_here

# Your R2 bucket name
EXPO_PUBLIC_R2_BUCKET_NAME=your_bucket_name_here

# R2 region (usually 'auto' for Cloudflare R2)
EXPO_PUBLIC_R2_REGION=auto

# R2 S3-compatible endpoint
# Format: https://<account_id>.r2.cloudflarestorage.com
# Or use your custom domain if configured
EXPO_PUBLIC_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Instant Platform Token
# Your Instant platform token for agent management
EXPO_PUBLIC_INSTANT_PLATFORM_TOKEN=your_platform_token_here

# Alternative: You can also configure these in app.json under expo.extra instead of env vars